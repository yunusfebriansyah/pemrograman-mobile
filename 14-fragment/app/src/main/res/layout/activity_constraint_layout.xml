<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintLayoutActivity"
    android:paddingHorizontal="@dimen/container_padding_horizontal">

    <TextView
        android:id="@+id/textView"
        style="@style/label"
        android:layout_marginTop="@dimen/margin_top_first_element"
        android:text="Pembahasan Intent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        style="@style/button"
        android:layout_width="wrap_content"
        android:text="Button 1"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        style="@style/button"
        android:layout_width="wrap_content"
        android:text="Button 2"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        style="@style/button"
        android:layout_width="wrap_content"
        android:text="Button 3"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        style="@style/button"
        android:layout_width="wrap_content"
        android:text="Button 4"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/container_padding_horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>