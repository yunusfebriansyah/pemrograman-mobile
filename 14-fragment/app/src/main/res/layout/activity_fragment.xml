<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentActivity"
    android:paddingHorizontal="@dimen/container_padding_horizontal">

    <FrameLayout
        android:id="@+id/frl_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"/>


    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/container_padding_horizontal"
        android:id="@+id/btn_fg1"
        android:layout_width="wrap_content"
        style="@style/button"
        android:paddingHorizontal="@dimen/margin_top_element"
        android:text="Fragment 1"/>

    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_fg1"
        android:layout_marginBottom="@dimen/container_padding_horizontal"
        android:id="@+id/btn_fg2"
        android:layout_width="wrap_content"
        style="@style/button"
        android:paddingHorizontal="@dimen/margin_top_element"
        android:layout_marginStart="@dimen/margin_top_element"
        android:text="Fragment 2"/>

</androidx.constraintlayout.widget.ConstraintLayout>